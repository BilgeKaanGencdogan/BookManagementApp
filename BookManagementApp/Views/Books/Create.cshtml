
@model BookModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Isbn" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Isbn" class="form-control" />
					<span asp-validation-for="Isbn" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="NumberOfPages" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="NumberOfPages" class="form-control" />
					<span asp-validation-for="NumberOfPages" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="PublishDate" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="PublishDate" id="datetimepicker" class="form-control" />
					<span asp-validation-for="PublishDate" class="text-danger"></span>
				</div>
            </div>
			<div class="row mb-3">
				<label asp-for="BookType" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="BookType" class="form-select">
						<option value="">-- Select --</option>
						@foreach (var bookType in Enum.GetValues(typeof(BookTypesEnum)))
						{
							<option value="@((int)bookType)">@bookType</option>
						}
					</select>
					<span asp-validation-for="BookType" class="text-danger"></span>
				</div>
			</div>
            <div class="row mb-3">
                <label asp-for="Price" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Price" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
				<label asp-for="IsTopSeller" class="col-2 col-form-label"></label>
				<div class="col-5" style="padding-top: 7px;">
					<input class="form-check-input" asp-for="IsTopSeller" />
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="AuthorId" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="AuthorId" class="form-select" asp-items="ViewBag.AuthorId">
						<option value="">-- Select --</option>
					</select>
					<span asp-validation-for="AuthorId" class="text-danger"></span>
				</div>
            </div>
			<div class="row mb-3">
				<label asp-for="GenreModels" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select multiple asp-for="GenreModels" class="form-select select2" asp-items="ViewBag.Genres">
						
					</select>
					<span asp-validation-for="GenreModels" class="text-danger"></span>
				</div>
			</div>
            
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
	<link href="~/lib/jquery-datetimepicker/jquery.datetimepicker.min.css" rel="stylesheet" />
	<script src="~/lib/jquery-datetimepicker/jquery.datetimepicker.full.min.js"></script>

	<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
	<script src="~/lib/select2/js/select2.min.js"></script>

	<script>

		$(function () {
			$("#datetimepicker").datetimepicker({
				timepicker: true,
				format: "m/d/Y"
			});

			$(".select2").select2();
		});
	</script>
}